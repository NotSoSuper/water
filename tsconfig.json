{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./",
    "experimentalDecorators": true,
    "lib": ["es5", "es2017"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "build",
    "strict": true,
    "strictNullChecks": true,
    "target": "ES2017",
  },
  "include": ["src"]
}
